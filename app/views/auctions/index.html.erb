      <!--<ul class="pagination">-->
        <!--<li>-->
          <!--<a href="<%#= will_paginate @auctions %>"></a>-->
        <!--</li>-->
      <!--</ul>-->
    <!--</div>-->
  <!--</div>-->


</div>


<!-- jQuery -->
<script src="js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>

</body>

</html>