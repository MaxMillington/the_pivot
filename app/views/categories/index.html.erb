<!-- Page Content -->
<div class="container">
  <ol class="breadcrumb">
    <li><a href="<%= root_path %>">Home</a></li>
    <li class="active">All Categories</li>
  </ol>
</div>
<div class="container">
  <div class="row category-row">
  <div class="col-md-12">
    <div id="context">
      <div class="row auction-index-title">
        <h1>All Categories</h1>
      </div>
    </div>

    <div class="row">
      <% @categories.each do |category| %>
          <div class="col-sm-4">
            <div id="index" class="thumbnail auction-index-card">
              <div class="auction-card-picture">
                <%= link_to image_tag(category.image_url, size: '350x350'),
                            {controller: 'auctions', action: 'index', :category_id => category.id },
                            class: 'img-responsive'%>
                <div class="caption">
                  <h3>
                    <%= link_to category.name, {controller: 'auctions', action: 'index', :category_id => category.id } %>
                  </h3>
                  <p><%= truncate(category.description, length: 80) %></p>
                </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</div>
    </div>

