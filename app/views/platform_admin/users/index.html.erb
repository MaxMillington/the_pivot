

<div class="container">
  <ol class="breadcrumb">
    <li class="active">All Users</li>
  </ol>
  <h3 class="text-center">All Users</h3>
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <ul class="nav nav-pills" role="tablist">
        <li role="presentation">
          <a href="<%= platform_admin_users_path %>">All
            <span class="badge"><%= User.count %></span>
          </a>
        </li>
      </ul>
    </div>
  </div> <!-- /row -->
  <br>
  <div class="table-responsive">
    <table class="table table-hover">
      <thead>
      <tr>
        <th>User ID</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Action</th>
      </tr>
      </thead>
      <tbody>
      <% @users.each do |user| %>
          <tr>
            <td>
              <%= link_to user.id, "#" %>
            </td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= user.email %></td>
            <td><%= link_to "Delete", platform_admin_user_path(user.id), method: :delete %></td>
          </tr>
      <% end %>
      </tbody>
    </table>

  </div>
</div>