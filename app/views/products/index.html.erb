<!DOCTYPE html>
<html lang="en">


<body>


<!-- Page Content -->
<div class="container">

  <div class="row">

    <div class="col-md-3"><br>
      <div class="list-group">
        <% @categories.each do |category| %>
            <%= link_to category.name,
                        {controller: 'products', action: 'index', :category_id => category.id },
                        class: 'list-group-item' %>
        <% end %>
      </div>
    </div>

    <div class="col-md-9">

      <div class="row carousel-holder">

        <div class="col-md-12">
          <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
              <li data-target="#carousel-example-generic" data-slide-to="1"></li>
              <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <% number1 = rand(400) %>
              <% number2 = rand(400) %>
              <% number3 = rand(400) %>
              <div class="item active">
                <img class="slide-image" src="<%= Product.find(number1).image_url %>" alt="">
              </div>
              <div class="item">
                <img class="slide-image" src="<%= Product.find(number2).image_url %>" alt="">
              </div>
              <div class="item">
                <img class="slide-image" src="<%= Product.find(number3).image_url %>" alt="">
              </div>
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
          </div>
        </div>

      </div>

      <div class="row"> <br>
        <div class="col-sm-4 col-lg-4 col-md-4">
          <% @all_products.each do |product| %>
        <div class="thumbnail">
         <%=link_to image_tag(product.image_url),
                         product_path(product.id),
                         class: 'img-responsive'%>
            <div class="caption">
              <h4><%= link_to product.name, product_path(product.id) %>
              </h4>
              <p><%= product.description %></p>
            </div>
          </div>
          <% end %>
        </div>

      </div>

    </div>

  </div>

  <!-- Pagination -->
  <div class="row text-center">
    <div class="col-lg-12">
      <ul class="pagination">
        <li>
          <a href="<%= will_paginate @all_products %>"></a>
        </li>
      </ul>
    </div>
  </div>


</div>


<!-- jQuery -->
<script src="js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>

</body>

</html>