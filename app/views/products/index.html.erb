
<!-- Page Content -->
<div class="container">

  <div class="row">

    <div class="col-md-3"><br>
      <div class="list-group">
        <% @categories.each do |category| %>
            <%= link_to category.name,
                        {controller: 'products', action: 'index', :category_id => category.id },
                        class: 'list-group-item' %>
        <% end %>
      </div>
    </div>

    <div class="col-md-9">
      <div class="row"> <br>
        <% @products.each do |product| %>
            <div class="col-sm-4 col-lg-4 col-md-4">
              <div class="thumbnail">
                <%=link_to image_tag(product.image_url),
                           product_path(product.id),
                           class: 'img-responsive' %>
                <div class="caption">
                  <h4><%= link_to product.name, product_path(product) %>
                  </h4>
                  <p><%= truncate(product.description, length: 80) %></p>
                  <%= link_to "edit", edit_product_path(product) %>
                </div>
              </div>
            </div>
        <% end %>

      </div>

    </div>

  </div>

  <!-- Pagination -->
  <div class="row text-center">
    <div class="col-lg-12">
      <ul class="pagination">
        <li>
          <%= will_paginate @products %>
        </li>
      </ul>
    </div>
  </div>

</div>