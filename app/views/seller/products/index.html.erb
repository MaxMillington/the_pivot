<!-- Page Content -->
<div class="container">

  <div class="row">

    <div class="col-md-3"><br>
      <div class="list-group">
        <% @categories.each do |category| %>
            <%= link_to category.name,
                        {controller: 'products', action: 'index', :category_id => category.id },
                        class: 'list-group-item' %>
        <% end %>
      </div>
    </div>

    <div class="col-md-9">

      <div class="row carousel-holder">

        <div class="col-md-12">
          <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
              <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
              <li data-target="#carousel-example-generic" data-slide-to="1"></li>
              <li data-target="#carousel-example-generic" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
              <% number1 = rand(200) %>
              <% number2 = rand(200) %>
              <% number3 = rand(200) %>
              <div class="item active">
                <%= image_tag Product.find(number1).image_url, class: "slide-image" %>
              </div>
              <div class="item">
                <%= image_tag Product.find(number2).image_url, class: "slide-image" %>
              </div>
              <div class="item">
                <%= image_tag Product.find(number3).image_url, class: "slide-image" %>
              </div>
            </div>
            <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
              <span class="glyphicon glyphicon-chevron-left"></span>
            </a>
            <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
              <span class="glyphicon glyphicon-chevron-right"></span>
            </a>
          </div>
        </div>

      </div>

      <div class="row"> <br>
        <% @products.each do |product| %>
          <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
              <%=link_to image_tag(product.image_url),
                seller_product_path(@seller.slug, product.id),
                class: 'img-responsive'%>
              <div class="caption">
                <h4><%= link_to product.name, seller_product_path(@seller.slug, product.id) %>
              </h4>
              <p><%= truncate(product.description, length: 80) %></p>
              </div>
            </div>
          </div>
          <% end %>

      </div>

    </div>

  </div>

  <!-- Pagination -->
  <div class="row text-center">
    <div class="col-lg-12">
      <ul class="pagination">
        <li>
          <a href="<%= will_paginate @products %>"></a>
        </li>
      </ul>
    </div>
  </div>


</div>


<!-- jQuery -->
<script src="js/jquery.js"></script>

<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>
