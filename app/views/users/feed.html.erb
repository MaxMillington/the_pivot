<h1>My Active Bids</h1>

<div class="row">
<% @auctions.each do |auction| %>
    <div class="feed-card col-md-4">
    <% if auction.bids.last.user.full_name == current_user.full_name %>
        <div class="jumbotron auction-jumbo auction-jumbo-winning">
          <%= image_tag auction.product.image_url, class: "img-responsive auction-jumbo-picture" %>
          <h3><%= auction.product.name %></h3>
          <section class="feed-info">
            <p>You are the current High Bidder!</p>
            <p>Your Current High Bid: <%= number_to_currency(auction.bids.last.amount) %></p>
          <p>Time Remaining: <%= distance_of_time_in_words(Time.now, auction.ending_time) %></p>
          <p><%= link_to 'View Auction', auction_path(auction) %></p>
          </section>
        </div>
        <% else %>
        <div class="jumbotron auction-jumbo auction-jumbo-losing">
          <div class="page-header feed-header">
            <h3><%= auction.product.name %><small><%= image_tag auction.product.image_url, class: "img-responsive auction-jumbo-picture" %></small></h3>
          </div>
          <section class="feed-info">
            <p>Current High Bidder: <%= auction.bids.last.user.full_name %></p>
            <p>Current Bid: <%= number_to_currency(auction.bids.last.amount) %></p>
          <p>Time Remaining: <%= distance_of_time_in_words(Time.now, auction.ending_time) %></p>
          <%= form_for @bid do |f| %>
                <div><%= hidden_field_tag :auction_id, auction.id %></div>
                <div><%= hidden_field_tag :user_id, session[:user_id] %></div>
                <%= f.label :amount %>
                <%= f.text_field :amount%>
                <%= f.submit %>
            <% end %>
            <p><%= link_to 'View Auction', auction_path(auction) %></p>
          </section>
        </div>
    <% end %>
    </div>
<% end %>
</div>